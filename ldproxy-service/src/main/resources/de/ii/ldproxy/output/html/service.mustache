{{> header}}

<div itemscope itemtype="http://schema.org/Dataset">
    <h1 itemprop="name">{{data.name}}</h1>
    <span itemprop="description">{{data.description}}</span>
    <br/>
    <br/>
    <br/>
    <dl class="dl-horizontal dl-horizontal-space">
        <dt>Feature Types</dt>
        <dd>
            <ul class="list-unstyled">
                {{#data.featureTypes}}
                    <li itemprop="hasPart" itemscope itemtype="http://schema.org/Dataset">
                        <a itemprop="url" href="{{path}}{{name}}/{{query}}">{{name}}</a>
                    </li>
                {{/data.featureTypes}}
                {{^data.featureTypes}}
                    <i>None</i>
                {{/data.featureTypes}}
            </ul>
        </dd>
        <dt>Keywords</dt>
        <dd>
            <span itemprop="keywords">
                <ul class="list-comma-separated">
                    {{#data.keywords}}
                        <li>{{.}}</li>
                    {{/data.keywords}}
                </ul>
            </span>
        </dd>
        <dt>License</dt>
        <dd>
            <span itemprop="license">{{data.license}}</span>
        </dd>
        <dt>Extent</dt>
        <dd>
            <span itemprop="spatial" itemscope itemtype="http://schema.org/Place">
                <span itemprop="geo" itemscope itemtype="http://schema.org/GeoShape">
                    <span itemprop="box">{{data.bbox}}</span>
                </span>
            </span>
        </dd>
        <dt>WFS</dt>
        <dd>
            <link itemprop="url" href="{{path}}{{query}}"/>
            <a itemprop="sameAs" href="{{data.url}}" target="_blank">{{data.url}}</a>
        </dd>
        <dt>Provider</dt>
        <dd>
            <ul class="list-unstyled" itemprop="provider" itemscope itemtype="http://schema.org/Organization">
                <li itemprop="name">{{data.providerName}}</li>
                {{#data.providerUrl}}
                    <li itemprop="url">{{.}}</li>
                {{/data.providerUrl}}
                {{^data.providerUrl}}
                    <li class="hidden" itemprop="url">http://www.example.com/todo</li>
                {{/data.providerUrl}}
                <li itemprop="contactPoint" itemscope itemtype="http://schema.org/ContactPoint">
                    <span class="hidden" itemprop="contactType">technical support</span>
                    <ul class="list-unstyled">
                        {{#data.contactName}}
                            <li itemprop="name">{{.}}</li>
                        {{/data.contactName}}
                        {{#data.contactEmail}}
                            <li itemprop="email">{{.}}</li>
                        {{/data.contactEmail}}
                        {{#data.contactTelephone}}
                            <li itemprop="telephone">{{.}}</li>
                        {{/data.contactTelephone}}
                        {{#data.contactFaxNumber}}
                            <li itemprop="faxNumber">{{.}}</li>
                        {{/data.contactFaxNumber}}
                        {{#data.contactHoursOfService}}
                            <li itemprop="hoursAvailable">{{.}}</li>
                        {{/data.contactHoursOfService}}
                        {{#data.contactUrl}}
                            <li itemprop="url">{{.}}</li>
                        {{/data.contactUrl}}
                        {{^data.contactUrl}}
                            <li class="hidden" itemprop="url">http://www.example.com/todo</li>
                        {{/data.contactUrl}}
                    </ul>
                </li>
                <li itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                    <ul class="list-unstyled">
                        {{#data.contactStreetAddress}}
                            <li itemprop="streetAddress">{{.}}</li>
                        {{/data.contactStreetAddress}}
                        {{#data.contactLocality}}
                            <li itemprop="addressLocality">{{.}}</li>
                        {{/data.contactLocality}}
                        {{#data.contactPostalCode}}
                            <li itemprop="postalCode">{{.}}</li>
                        {{/data.contactPostalCode}}
                        {{#data.contactRegion}}
                            <li itemprop="addressRegion">{{.}}</li>
                        {{/data.contactRegion}}
                        {{#data.contactCountry}}
                            <li itemprop="addressCountry">{{.}}</li>
                        {{/data.contactCountry}}
                    </ul>
                </li>
            </ul>
        </dd>
    </dl>

</div>

{{> footer}}