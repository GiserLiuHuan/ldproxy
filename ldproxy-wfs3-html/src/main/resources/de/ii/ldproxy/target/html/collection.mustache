{{> header}}

<div>
    <h1>{{title}}</h1>
    <span>{{{description}}}</span>
    <br/>
    <br/>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Link to the Data</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#items}}
                <li>
                    <a itemprop="url" href="{{href}}">{{title}}</a>
                </li>
                {{/items}}
                {{^items}}
                    <li>
                        None
                    </li>
                {{/items}}
            </ul>
        </div>
    </div>

    {{#bbox2}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Spatial Extent</div>
        {{^hideMap}}
            <div class="col-md-10">
                <div id="map"></div>
            </div>
        {{/hideMap}}
        {{#hideMap}}
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        [ [ {{minLon}}, {{minLat}} ], [ {{maxLon}}, {{maxLat}} ] ]
                    </li>
                </ul>
            </div>
        {{/hideMap}}
    </div>
    {{/bbox2}}

    {{#temporalExtent}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Temporal Extent</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                <li>
                    <span id="timeInterval"></span>
                </li>
            </ul>
        </div>
    </div>
    {{/temporalExtent}}

    <h2>Expert information</h2>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Supported CRSs</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#crs}}
                <li>
                    <a href="{{.}}">{{.}}</a>
                </li>
                {{/crs}}
                {{^crs}}
                <li>
                    <a href="http://www.opengis.net/def/crs/OGC/1.3/CRS84">http://www.opengis.net/def/crs/OGC/1.3/CRS84</a>
                </li>
                {{/crs}}
            </ul>
        </div>
    </div>

    {{#storageCrs}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Storage CRS</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{.}}">{{.}}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{/storageCrs}}

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Additional Links</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#links}}
                    <li>
                        <a itemprop="url" href="{{href}}">{{title}}</a>
                    </li>
                {{/links}}
                {{^links}}
                    <li>None</li>
                {{/links}}
            </ul>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Type of Data</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#itemType}}
                    <li>
                        {{.}}
                    </li>
                {{/itemType}}
                {{^itemType}}
                    <li>
                        feature
                    </li>
                {{/itemType}}
            </ul>
        </div>
    </div>

</div>

{{> script}}

<script src="{{urlPrefix}}/app/js/bbox.js" defer></script>
<script src="{{urlPrefix}}/app/js/date.js" defer></script>

{{> footer}}

