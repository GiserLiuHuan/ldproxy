{{> header}}

<div itemscope itemtype="http://schema.org/Dataset">
    <h1 itemprop="name">{{title}}</h1>
    <span itemprop="description">{{{description}}}</span>
    <p itemprop="url" class="d-none">{{canonicalUrl}}</p>
    {{#catalogUrl}}
        <div itemprop="includedInDataCatalog" itemscope itemtype="http://schema.org/DataCatalog" class="d-none">
            <div itemprop="url">{{.}}</div>
        </div>
    {{/catalogUrl}}
    {{#metadata}}
        <ul itemprop="keywords" class="d-none">
            {{#keywords}}
                <li>
                    {{.}}
                </li>
            {{/keywords}}
        </ul>
    {{/metadata}}
    <ul class="d-none">
        {{#distributions}}
            <li itemprop="distribution" itemscope itemtype="http://schema.org/DataDownload">
                <span itemprop="name">{{title}}</span><span itemprop="encodingFormat">{{type}}</span><span itemprop="contentUrl">{{href}}</span>
            </li>
        {{/distributions}}
    </ul>
    <br/>
    <br/>
    <br/>

    {{#data}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Data</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{href}}">{{title}}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{/data}}

    {{#apiDefinition}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">API definition</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{href}}" target="_blank">{{title}}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{/apiDefinition}}

    {{#apiDocumentation}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">API documentation</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{href}}" target="_blank">{{title}}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{/apiDocumentation}}

    {{#metadata}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Provider</div>
            <div class="col-md-10">
                <ul class="list-unstyled" itemprop="creator" itemscope itemtype="http://schema.org/Organization">
                    {{#contactName}}
                        <li itemprop="name">{{.}}</li>
                    {{/contactName}}
                    {{#contactUrl}}
                        <li itemprop="url"><a href="{{.}}" target="_blank">{{.}}</a></li>
                    {{/contactUrl}}
                    <li itemprop="contactPoint" itemscope itemtype="http://schema.org/ContactPoint">
                        <span class="d-none" itemprop="contactType">technical support</span>
                        <ul class="list-unstyled">
                            {{#contactEmail}}
                                <li itemprop="email">{{.}}</li>
                            {{/contactEmail}}
                            {{#contactPhone}}
                                <li itemprop="telephone">{{.}}</li>
                            {{/contactPhone}}
                            {{#contactUrl}}
                                <li itemprop="url" class="d-none">{{.}}</li>
                            {{/contactUrl}}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        {{#licenseName}}
            <div class="row my-3">
                <div class="col-md-2 font-weight-bold">License</div>
                <div class="col-md-10">
                    <div itemprop="license">{{.}}</div>
                </div>
            </div>
        {{/licenseName}}
    {{/metadata}}


    {{#bbox2}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Spatial Extent</div>
            {{^hideMap}}
                <div class="col-md-10">
                    <div id="map"></div>
                </div>
            {{/hideMap}}
            {{#hideMap}}
                <div class="col-md-10">
                    <ul class="list-unstyled">
                        <li>
                            [ [ {{minLon}}, {{minLat}} ], [ {{maxLon}}, {{maxLat}} ] ]
                        </li>
                    </ul>
                </div>
            {{/hideMap}}
        </div>
    {{/bbox2}}

    {{#temporalExtent}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Temporal Extent</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <span id="timeInterval"></span>
                    </li>
                </ul>
            </div>
        </div>
    {{/temporalExtent}}

    <h2>Expert information</h2>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">Additional Links</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#links}}
                    <li>
                        <a href="{{href}}">{{title}}</a>
                    </li>
                {{/links}}
                {{^links}}
                    <li>None</li>
                {{/links}}
            </ul>
        </div>
    </div>

    {{#orderedSections}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{title}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#links}}
                        <li>
                            <a itemprop="url" href="{{url}}" {{#target}}target="{{.}}"{{/target}}>{{title}}</a>
                        </li>
                    {{/links}}
                    {{^links}}
                        <li>None</li>
                    {{/links}}
                </ul>
            </div>
        </div>
    {{/orderedSections}}

    {{#dataSourceUrl}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">Data source</div>
            <div class="col-md-10">
                <a itemprop="isBasedOn" href="{{.}}" target="_blank">{{.}}</a>
            </div>
        </div>
    {{/dataSourceUrl}}

    {{#temporalCoverage}}
                <div itemprop="temporalCoverage" class="d-none">{{.}}</div>
    {{/temporalCoverage}}
    {{#spatialCoverage}}
        <div itemprop="spatialCoverage" itemscope itemtype="http://schema.org/Place" class="d-none"><div itemprop="geo" itemscope itemtype="http://schema.org/GeoShape"><div itemprop="box">{{.}}</div></div></div>
    {{/spatialCoverage}}

</div>

{{> script}}

<script src="{{urlPrefix}}/app/js/bbox.js" defer></script>
<script src="{{urlPrefix}}/app/js/date.js" defer></script>

{{> footer}}
