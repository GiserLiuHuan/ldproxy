<div {{{microdata}}}>
    {{#idAsUrl}}
        <h1 itemprop="name">{{name}}</h1>
        <span class="d-none" {{{id.microdata}}}>{{canonicalUrl}}</span>
    {{/idAsUrl}}
    {{^idAsUrl}}
        <h4 class="mt-3 mb-1"><a href="{{#currentUrlWithSegment}}{{id.value}}{{/currentUrlWithSegment}}{{additionalParams}}"><span itemprop="name">{{name}}</span></a></h4>
        <span class="d-none" itemprop="sameAs">{{#currentUrlWithSegmentClearParams}}{{id.value}}{{/currentUrlWithSegmentClearParams}}</span>
    {{/idAsUrl}}
        {{#children}}
            {{> property}}
        {{/children}}
        {{#geo}}
            {{> property}}
        {{/geo}}
        {{#links}}
            <dl class="dl-horizontal dl-horizontal-no-space">
                <dt>{{name}}</dt>
            <dd>
                <ul class="list-unstyled">
                {{#children}}
                    <li>
                        <a href="{{value.value}}" target="_blank">{{value.name}}</a>
                    </li>
                {{/children}}
                    </ul>
            </dd>
            </dl>
        {{/links}}
</div>
