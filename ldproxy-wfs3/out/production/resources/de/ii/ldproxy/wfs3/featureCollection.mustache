{{> header}}

<div itemscope itemtype="http://schema.org/Dataset">
    <h1 itemprop="name">{{title}}{{#indexValue}} in {{indexValue}}{{/indexValue}}</h1>
    <span itemprop="description">{{description}}</span>
    <link itemprop="url" href="{{path}}./{{#indexValue}}?{{index}}={{indexValue}}{{/indexValue}}"/>
    <span itemprop="isPartOf" itemscope itemtype="http://schema.org/Dataset">
        <link itemprop="url" href="{{path}}{{^indexValue}}.{{/indexValue}}./"/>
    </span>
    <br/>
    <br/>
</div>

<div id="app-wrapper" class="mb-5">
<div class="row mb-3">
<div class="col-md-3 font-weight-bold py-1">
Filter
</div>
</div>
</div>

<div class="row">
    <div class="col-md-6">

        {{> pagination}}

        <ul class="list-unstyled">
            {{#features}}
                <li>
                    {{> feature}}
                </li>
            {{/features}}
        </ul>

        {{> pagination}}

    </div>
    {{^hideMap}}
        <div class="col-md-6">
            <div id="map"></div>  
        </div>
    {{/hideMap}}
</div>

{{> script}}

<script src="{{urlPrefix}}/app/js/featureCollection.js"></script>

{{> footer}}
